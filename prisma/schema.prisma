generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  orders    Order[]
  products  Product[]
  users     User[]

  @@index([slug])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role     @default(CUSTOMER)
  createdAt DateTime @default(now())
  storeId   String?
  orders    Order[]
  store     Store?   @relation(fields: [storeId], references: [id])
}

model Product {
  id                 String  @id @default(cuid())
  sku                String
  title              String
  slug               String  @unique
  description        String?
  priceCents         Int
  previousPriceCents Int?

  purchasePriceCents Int? @default(0)
  pageView           Int? @default(0)
  inCart             Int? @default(0)
  totalUnitsSold     Int  @default(0)
  totalRevenueCents  Int  @default(0)

  currency       String            @default("BDT")
  stock          Int               @default(0)
  images         Json
  active         Boolean           @default(true)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  features       String?
  galleryUrls    Json?
  note           String?
  optionsJson    Json?
  storeId        String
  featured       Boolean           @default(false)
  thumbnailUrl   String?
  videoPosterUrl String?
  videoUrl       String?
  OrderItem      OrderItem[]
  store          Store             @relation(fields: [storeId], references: [id])
  categories     ProductCategory[]

  @@index([storeId, active, createdAt])
}

model Category {
  id          String            @id @default(cuid())
  title       String
  slug        String            @unique
  description String?
  iconUrl     String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  products    ProductCategory[]
}

model ProductCategory {
  productId  String
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@id([productId, categoryId])
}

model Order {
  id          String @id @default(cuid())
  orderNumber String @default("") // human-readable ID (e.g. SH-2025-0001)
  orderSerial Int    @unique @default(autoincrement())

  customerName String  @default("")
  phone        String  @default("")
  email        String? @default("")
  userId       String? @default("")
  user         User?   @relation(fields: [userId], references: [id])

  // Address
  streetAddress String?
  division      String?
  district      String?
  upazila       String?
  city          String?
  postalCode    String?
  customerNote  String?
  adminNote     String?
  status        OrderStatus @default(PENDING)
  paymentMethod PaymentMethod @default(COD)

  subtotalCents Int
  deliveryCents Int    @default(0)
  taxCents      Int    @default(0)
  totalCents    Int
  currency      String @default("BDT")

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  storeId String
  store   Store  @relation(fields: [storeId], references: [id])

  items OrderItem[]

  @@index([storeId, status, createdAt])
}

model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  productId String

  quantity       Int
  unitPriceCents Int
  lineTotalCents Int

  productTitle    String
  productSku      String
  productImageUrl String?

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([productId])
}

enum Role {
  ADMIN
  STAFF
  CUSTOMER
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

enum PaymentMethod {
  COD
  BKASH
  NAGAD
  CARD
  OTHER
}
